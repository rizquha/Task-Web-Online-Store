                    console.log(message);
                    console.log(from);


                    connection.invoke("SendMessage",to,message,from)
                    .then(data =>{
                        console.log("berhasil kirim data")
                    }).catch(err =>{
                        return console.error(err.toString());
                    })
                });
                connection.on("GotAMessage",function(from,message){
